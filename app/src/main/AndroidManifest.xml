<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.windowshopper_mvvm">

    <application
        android:name=".WindowShopperApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_windowshopper_launch"
        android:supportsRtl="true"
        android:theme="@style/Theme.WindowShopper_MVVM">

        <activity android:name=".ui.account.AccountActivity"/>

        <activity android:name=".ui.cart.CartActivity"/>

        <activity android:name=".ui.login.LoginActivity"/>

        <activity android:name=".ui.shop.ShopActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>